doctype html
html
  head
    title SAML Web App A
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://www.w3schools.com/w3css/4/w3.css')
    script(src="https://code.jquery.com/jquery-3.1.1.min.js")
    script(src="https://cdn.auth0.com/js/lock/11.2.1/lock.min.js")
    style.
      body {
        background: #ffd9b3;
      }
  body
    nav.w3-bar.w3-border.w3-light-grey( role="navigation" )
      .w3-bar-item.w3-text-grey Auth0 - SAML NodeJS
      a( href="/").w3-bar-item.w3-button Home
      if loggedIn
        a( href="/user" ).w3-bar-item.w3-button Profile
        a( href="/logout-api" ).w3-bar-item.w3-button Logout API
        a( href="/logout-saml" ).w3-bar-item.w3-button Logout SAML
      else
        a( href="/login" ).w3-bar-item.w3-button Universal Login
    h1 SAML Web App A
    block content
